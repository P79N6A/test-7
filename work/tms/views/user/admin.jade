extend ../layout
block pageCfg
	- header.menu = 'admin';
	
block content

	style.
		.user-list{
			margin:20px;
		}
		.user-list .label{
			margin-right:10px;
		}
		h4{
			margin:30px 0 0 20px;
		}

	div.col-md-offset-two
		.main
			.pages-list
				.row
					.col-md-12
						.wrapper
							h1.main-title 管理配置
								a(href="/s/add/user", style="font-size: 13px; float: right; margin-right: 20px;") 新增用户 &gt;
							h4 管理员
							p.user-list
								- page.admin.forEach(function(item, i){
									span.label.label-info !{item.name} (!{item.uid})
								- });
								
							form.form-horizontal(role="form", method="post", action="./admin/pms/update/admin")
								.form-group
									label.col-md-2.control-label 增加管理员：
									.col-md-3
										input.form-control(type="text", name="uid", required, placeholder='请输入工号')
									.col-md-1
										button.btn.btn-primary.mk-btn.mk-btn-primary(type="submit") 增加
								
								
							h4 程序员
							p.user-list
								- page.coder.forEach(function(item, i){
									span.label.label-info !{item.name}(!{item.uid})
								- });
							form.form-horizontal(role="form", method="post", action="./admin/pms/update/coder")
								.form-group
									label.col-md-2.control-label 增加程序员：
									.col-md-3
										input.form-control(type="text", name="uid", required, placeholder='请输入工号')
									.col-md-1
										button.btn.btn-primary.mk-btn.mk-btn-primary(type="submit") 增加
							
							h4 清空权限
							form.form-horizontal(role="form", method="post", action="./admin/pms/remove/")
								.form-group
									label.col-md-2.control-label 工号：
									.col-md-3
										input.form-control(type="text", name="uid", required, placeholder='请输入工号')
									.col-md-1
										button.btn.btn-primary.mk-btn.mk-btn-primary(type="submit") 删除
