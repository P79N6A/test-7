extend ../layout
block pageCfg
	- header.menu = 'img';
	
block container

	link(rel="stylesheet",href="/assets/lib/dropzone/dropzone.css")
	link(rel="stylesheet",href="/assets/imgupload.css")
	
	style.
		h2 small{
			color: #fff;
			margin-left:20px;
			font-size:14px;
		}
		h2 small a{
			color: #fff;
			text-decoration: underline;
		}
		h2 small a:hover{
			color: #FF3861;
		}

	div(class= iframe ? '' : 'col-md-offset-two')
		.main
			.pages-list
				.row
					.col-md-12
						.wrapper
							h1.main-title 图片上传
								//small 图片最大不超过1M，图片体积公式：
									a(href="javascript:void(0);", target="_blank") 高x宽x0.4/1024+2=标准最大k数
								a.create_btn.btn.btn-primary.mk-btn.mk-btn-primary.pull-right(role='button', href= iframe ? "/img/list?iframe=1" : "/img/list") 我的图片
							
							form.dropzone(action="#")

	script(src="/assets/popupimglist.js")
	script(type="text/javascript" src="/assets/lib/dropzone/dropzone.js")
	script(type="text/javascript" src="/assets/lib/zeroClipboard/ZeroClipboard.min.js")
	script(type="text/javascript" src="/assets/imgupload.js")
